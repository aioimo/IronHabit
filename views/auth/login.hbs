


<div class="header">
  
  <div class="container login-container">
    <h2>Login</h2>
    <form action="/auth/login" method="POST" id="form-container">
      <label for="email">Username</label> <br>
      <input id="email" type="text" name="email" placeholder="JonSnow" class="habit-input">
      <br><br>
      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password" class="habit-input">
      <br>
      {{#if message }}
        <div class="error-message">{{ message }}</div>
      {{/if}}
      <br><br>
      <button class="form-btn">Login</button>
    </form>
  </div>

</div>

